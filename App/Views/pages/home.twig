{% extends 'base.twig' %}

{% block title %}{{blogName}} | Blog{% endblock %}

{% block body %}
{% if loggedin %}<button onclick="location.href='/Post/create'" class="btn btn-primary" style="float: right;">Create</button>{% endif %}
  {% if blogDescription != "" %}<h5><small class="text-muted">{{blogDescription|raw}}</small></h5><hr />{% endif %}
  {% for post in posts %}
    <div class="post-preview">
      <h2 class="post-title"><a href="/Post/{{ post['id'] }}/index">{{ post['title']|raw }}</a></h2>
      <p>{{ post['content']|raw|nl2br }}</p>
      <p class="post-meta">Posted by <a href="#">{{ post['user'] }}</a> on {{ post['date'] }}</p>
    </div>
    <hr>
  {% endfor %}

{% endblock %}
